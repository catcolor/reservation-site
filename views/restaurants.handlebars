<div class="d-flex justify-content-start">
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle btn-lg mr-3" type="button" id="dropdownMenu2"
      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      選擇地區
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      <a class="dropdown-item {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
      {{#each categories}}
      <a class="dropdown-item {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
        href="?categoryId={{this.id}}">{{this.name}}</a>
      {{/each}}
    </div>
  </div>

  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/restaurants">
        <div class="input-group mb-3 input-group-lg">

          <input type="text" name="keyword" class="form-control" placeholder="Restaurant name ..."
            aria-label="Movie Name..." aria-describedby="search-button" value="{{keyword}}">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>

<br />

<div class="row">
  {{#each restaurants}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/restaurants/{{this.id}}">
        <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      </a>
      <div class="card-body">
        <p class="card-text">
          {{this.name}}
        </p>
        <p class="card-text">{{this.Category.name}}{{this.address}}</p>
        <div class="d-flex justify-content-end">
          {{#if isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
          <button type="button" class="btn btn-primary ml-2" data-toggle="modal" data-target="#exampleModal"
            data-whatever="@mdo">預約</button>

          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">預約</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/reservations/{{this.id}}" method="POST">
                    <div class="form-row mb-3">
                      <label class="form-label" for="people">人數</label>
                      <input class="form-control" type="number" name="people" id="people" min="1" max="6"
                        placeholder="Enter address">
                    </div>
                    <div class="form-row mb-3">
                      <label class="form-label" for="time">日期</label>
                      <input class="form-control" type="date" name="time" id="time" placeholder="Enter opening hours">
                    </div>
                    <div class="form-row mb-3">
                      <label class="form-label" for="time">時間</label>
                      <input class="form-control" type="time" name="time" id="time" placeholder="Enter opening hours">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>
<br />
<br />

<div class="d-flex justify-content-center">
  <nav class="mt-3" aria-label="page navigation">
    <ul class="pagination">
      <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
        <a class="page-link" href="/restaurants?page={{pagination.prev}}&categoryId={{categoryId}}"
          aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      {{#each pagination.pages}}
      {{#ifCond this ../pagination.currentPage}}
      <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="/restaurants?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
      </li>
      {{/ifCond}}
      {{/each}}
      <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
        <a class="page-link" href="/restaurants?page={{pagination.next}}&categoryId={{categoryId}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>